{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "strict": true,
        "typeRoots": [
            "src/type",
        ],
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "ref": [
        "./src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*",
        "src/type/*"
    ]
}